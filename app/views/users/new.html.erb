<div class="content">
  <% if @user.errors.any? %>
    <div class="has-background-link">
      <div class="container ">
        <article class="media">
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</strong>
                <br>
                <ul>
                  <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </p>
            </div>
          </div>
        </article>
      </div>
    </div>
  <% end %>
</div>
<section class="section">
  <%= form_with model: @user, local: true do |form|%>
    <div class="has-background-link">
      <div class="container ">
        <div class="card">
          <div class="has-background-link">
            <div class="field">
              <%= form.label :name, class: "button is-primary is-rounded" %>
              <div class="control">
                <%= form.text_field :name, class: "input is-primary is-rounded", type: "text"%>
              </div>
            </div>
            <div class="field">
              <%= form.label :email, class: "button is-primary is-rounded"%>
              <div class="control">
                <%= form.email_field :email, class: "input is-primary is-rounded", type: "text" %>
              </div>
            </div>
            <div class="field">
              <%= form.label :password, class: "button is-primary is-rounded"%>
              <div class="control">
                <%= form.password_field :password, class: "input is-primary is-rounded", type: "text"%>
              </div>
            </div>
            <div class="field">
              <%= form.label :password_confirmation, class: "button is-primary is-rounded"%>
              <div class="control">
                <%= form.password_field :password_confirmation, class: "input is-primary is-rounded", type: "text"%>
              </div>
            </div>
            <footer class="card-footer">
              <p>
                <%= form.submit "Create user", class: "button is-primary is-rounded" %>
                <%= link_to 'Back', root_path, class: "button is-primary is-light is-rounded" %>
              </p>
            </footer>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
